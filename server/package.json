{
  "name": "worker-typescript-template",
  "version": "1.0.0",
  "description": "Cloudflare worker TypeScript template",
  "main": "dist/index.js",
  "files": [
    "../common"
  ],
  "scripts": {
    "build": "tsup src --format esm --legacy-output",
    "start": "esno src/index.ts --watch",
    "dev": "nodemon src/index.ts"
  },
  "nodemonConfig": {
    "exec": "esno",
    "ext": "js,json,ts"
  },
  "author": "David Han",
  "devDependencies": {
    "@koa/router": "^10.1.1",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-websocket": "^5.0.7",
    "@types/node": "^17.0.18",
    "@types/ws": "^8.2.3",
    "koa": "^2.13.4",
    "koa-websocket": "^6.0.0",
    "nanoid": "^3.3.1",
    "nodemon": "^2.0.15",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5",
    "url-pattern": "^1.0.3"
  }
}