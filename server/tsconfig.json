{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "alwaysStrict": true,
    "strict": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "websocket"
    ]
  },
  "include": [
    "src",
    "../common"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}